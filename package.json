{
  "name": "gcc-map-view",
  "displayName": "GCC Map View",
  "description": "Visualize GCC linker scripts (.ld) and map files (.map) with a tree view and graphical memory map",
  "version": "0.1.0",
  "publisher": "gcc-map-view",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:linkerscript",
    "onView:memoryMapTree",
    "workspaceContains:**/*.ld",
    "workspaceContains:**/*.map",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "linkerscript",
        "aliases": ["Linker Script", "ld"],
        "extensions": [".ld", ".lds"],
        "configuration": "./language-configuration.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gccMapView",
          "title": "GCC Memory Map",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "gccMapView": [
        {
          "id": "memoryMapTree",
          "name": "Memory Layout"
        }
      ]
    },
    "commands": [
      {
        "command": "gccMapView.showMemoryMap",
        "title": "Show Memory Map",
        "icon": "$(graph)"
      },
      {
        "command": "gccMapView.refresh",
        "title": "Refresh Memory Map",
        "icon": "$(refresh)"
      },
      {
        "command": "gccMapView.openFile",
        "title": "Open Linker Script or Map File",
        "icon": "$(file)"
      },
      {
        "command": "gccMapView.openSymbolSource",
        "title": "Open Source File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "gccMapView.search",
        "title": "Search Symbols",
        "icon": "$(search)"
      },
      {
        "command": "gccMapView.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gccMapView.showMemoryMap",
          "when": "view == memoryMapTree",
          "group": "navigation"
        },
        {
          "command": "gccMapView.refresh",
          "when": "view == memoryMapTree",
          "group": "navigation"
        },
        {
          "command": "gccMapView.openFile",
          "when": "view == memoryMapTree",
          "group": "navigation"
        },
        {
          "command": "gccMapView.search",
          "when": "view == memoryMapTree",
          "group": "navigation"
        },
        {
          "command": "gccMapView.clearSearch",
          "when": "view == memoryMapTree && gccMapView.filterActive",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gccMapView.openSymbolSource",
          "when": "view == memoryMapTree && viewItem == symbol",
          "group": "inline"
        },
        {
          "command": "gccMapView.openSymbolSource",
          "when": "view == memoryMapTree && viewItem == symbol",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
