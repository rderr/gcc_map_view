{
  "name": "gcc-map-view",
  "displayName": "GCC Map View",
  "description": "Visualize GCC linker map files (.map) and linker scripts (.ld) with a graphical memory map",
  "version": "0.3.1",
  "license": "MIT",
  "author": "Rob Derr <robjderr@gmail.com>",
  "publisher": "RobDerr",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rderr/gcc_map_view"
  },
  "homepage": "https://github.com/rderr/gcc_map_view#readme",
  "bugs": {
    "url": "https://github.com/rderr/gcc_map_view/issues"
  },
  "keywords": [
    "gcc",
    "map",
    "memory",
    "linker",
    "embedded",
    "stm32",
    "esp32"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:linkerscript",
    "workspaceContains:**/*.ld",
    "workspaceContains:**/*.map",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "linkerscript",
        "aliases": [
          "Linker Script",
          "ld"
        ],
        "extensions": [
          ".ld",
          ".lds"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "gccMapView.showMemoryMap",
        "title": "Show Memory Map",
        "icon": "$(graph)"
      },
      {
        "command": "gccMapView.refresh",
        "title": "Refresh Memory Map",
        "icon": "$(refresh)"
      },
      {
        "command": "gccMapView.findInMemoryMap",
        "title": "Find in Memory Map"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "gccMapView.findInMemoryMap",
          "group": "navigation@100",
          "when": "gccMapView.hasLayout && resourceExtname =~ /\\.(c|cpp|cc|cxx|h|hpp|hxx|hh|s|S|asm|rs|zig|d)$/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "tsc -p tsconfig.test.json",
    "test": "mocha out-test/test/**/*.test.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0"
  }
}
