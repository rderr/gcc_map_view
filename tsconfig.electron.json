{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "out-electron",
    "lib": ["ES2022"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": "."
  },
  "include": [
    "src/models/**/*",
    "src/parsers/**/*",
    "src/util/**/*",
    "electron/**/*"
  ],
  "exclude": ["node_modules"]
}
