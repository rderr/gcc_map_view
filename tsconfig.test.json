{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "out-test",
    "rootDir": ".",
    "lib": ["ES2022"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", ".vscode-test", "out", "electron"]
}
